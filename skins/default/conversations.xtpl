<!-- BEGIN: Conversations -->
<div class="article">
 <div style="float:left">{tree}</div>
 <div style="text-align:right">
  <a href="{site}/forum_rules/" title="{main_forum_rules}">{main_forum_rules}</a>
 </div>
</div>

<div class="article">
 <div class="title"><img src="{site}/skins/{skin}/images/icons/report.png" alt="" /> {cv_conversations}</div>
</div>

<!-- BEGIN: Topics -->
<div class="article">
 <div class="bigbutton"><a class="topic" href="{site}/index.php?a=conversations&amp;s=newconvo" title="{cv_start_convo}">{cv_start_convo}</a></div>
 <p></p>
</div>

<div class="article">
 <span class="head">
  <span class="icon">&nbsp;</span>
  <span class="icon">&nbsp;</span>
  <span class="topic"><a href="{site}/index.php?a=conversations&amp;min={min}&amp;n={n}&amp;order=title&amp;asc={asc}">{cv_topic}</a></span>
  <span class="starter"><a href="{site}/index.php?a=conversations&amp;min={min}&amp;n={n}&amp;order=starter&amp;asc={asc}">{cv_starter}</a></span>
  <span class="number"><a href="{site}/index.php?a=conversations&amp;min={min}&amp;n={n}&amp;order=replies&amp;asc={asc}">{cv_replies}</a></span>
  <span class="number"><a href="{site}/index.php?a=conversations&amp;min={min}&amp;n={n}&amp;order=views&amp;asc={asc}">{cv_views}</a></span>
  <span class="topic_last_post"><a href="{site}/index.php?a=conversations&amp;min={min}&amp;n={n}&amp;order=last&amp;asc={asc}">{cv_last}</a></span>
 </span>
<!-- BEGIN: NoTopics -->
 <span class="notice">{cv_no_convos}</span>
 <p class="list_line"></p>
<!-- END: NoTopics -->

<!-- BEGIN: ForumTopic -->
 <div class="topic_icon">
  <div class="{state}{poll}">
   {pinned}
  </div>
 </div>

 <span class="icon">
  {topic_icon}
 </span>

 <span class="topic">
  {moved}<a href="{site}/topic/{topic_title_link}-{topic_id}/" title="{forum_topic_posted}: {topic_posted}">{topic_title}</a> {Pages}
<!-- BEGIN: NewPost -->
  &mdash; <a href="{site}/topic/{topic_title_link}-{topic_id}/&amp;unread=1#unread"><img src="{site}/skins/{skin}/images/icons/topic_unread.png" title="{forum_unread}" alt="{forum_unread}" /></a>
<!-- END: NewPost -->
  {topic_description}
 </span>
 <span class="starter">
<!-- BEGIN: TopicStarterMember -->
  <a href="{site}/profile/{link_name}-{topic_starter}/" class="small">{topic_starter_name}</a>
<!-- END: TopicStarterMember -->
<!-- BEGIN: TopicStarterGuest -->
  {topic_starter_name}
<!-- END: TopicStarterGuest -->
 </span>
 <span class="number">{topic_replies}</span>
 <span class="number">{topic_views}</span>
 <span class="topic_last_post">
  {topic_edited}<br />
  <a href="{site}/topic/{topic_title_link}-{topic_id}/{jump}"><img src="{site}/skins/{skin}/images/icons/goto_last_post.png" title="{forum_jump}" alt="{forum_jump}" /></a> &nbsp;
<!-- BEGIN: LastPosterMember -->
  {forum_by} <a href="{site}/profile/{link_name_last}-{topic_last_poster}/" class="small">{topic_last_poster_name}</a>
<!-- END: LastPosterMember -->
<!-- BEGIN: LastPosterGuest -->
  {forum_by} {topic_last_poster_name}
<!-- END: LastPosterGuest -->
 </span>
 <p class="list_line"></p>
<!-- END: ForumTopic -->
</div>

<div class="article">
 <div class="bigbutton"><a class="topic" href="{site}/index.php?a=conversations&amp;s=newconvo" title="{cv_start_convo}">{cv_start_convo}</a></div>
 <p></p>
</div>

<div class="article">
 <span class="select_align">
  {cv_pages}: {pagelinks}
 </span><br />
 <p></p>
</div>
<!-- END: Topics -->
<!-- END: Conversations -->